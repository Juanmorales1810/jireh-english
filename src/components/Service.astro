        <div class="mt-12 text-center">
            <Button
                className="inline-block rounded bg-red-600 px-12 text-sm font-medium text-white transition hover:bg-red-700 focus:outline-none focus:ring focus:ring-yellow-400"
            >
                Get Started Today
            </Button>
        </div>
    </div>
</section>
